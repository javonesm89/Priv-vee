<%= form_for(@user) do |f| %>
    <%= content_tag :div, "", :class => "text-center" do %>
        <%= f.label :name, "Name", :class => "form-label" %>
        <%= f.text_field :name, :class => "form-control", :placeholder => @user.errors.full_messages_for(:name).first if true %>
        <%= f.label :email, "Email", :class => "form-label" %>
        <%= f.email_field :email, :class => "form-control", :placeholder => @user.errors.full_messages_for(:email).first if true %>
        <%= f.label :name, "Password", :class => "form-label" %>
        <%= f.password_field :password, :class => "form-control", :placeholder => @user.errors.full_messages_for(:password).first if true %><br>
        <%= f.submit "Submit", :class => "btn btn-info"%>
    <% end %>
<% end %>
