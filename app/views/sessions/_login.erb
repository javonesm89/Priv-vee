<%= form_for login_path do %>
    <%= content_tag :div, "", :class => "text-center" do %>
        <%= label_tag :email, "Email", :class => "form-label" %>
        <%= email_field_tag :email, "", :class => "form-control" %>
        <%= label_tag :password, "Password", :class => "form-label" %>
        <%= password_field_tag :password, "", :class => "form-control" %><br>
        <%= submit_tag "Login", :class => "btn btn-info" %>
    <% end %>
<% end %>