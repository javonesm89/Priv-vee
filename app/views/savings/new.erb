<% if @errors %>
  <div id="error_explanation">
    <h2><%= pluralize(@errors.count, "error") %> prohibited you from saving this saving strategy:</h2>
    <ul>
      <% @errors.each.uniq do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<p>


<%= content_tag :ul,'', :class => "list-group" do %>

<%= content_tag :div, "", :class => "container" do %>

  <%= content_tag :div, "", :class => "position-relative" do %>
    
    <%= content_tag :p, "Add Saving", :class => "text-center display-4" %>
  <%= content_tag :li, '', :class => "list-group list-group-flush" do %><br>
    PRO TIP: for 401k, it's typical to invest what your employer matches.<br>
    PRO TIP: for a Safety Net, it's typical to save between 5%-10% of your monthly income.
  <% end %>
  
        <%= form_for(@planner) do |f| %>
            <%= f.fields_for :saving_attributes do |s| %> 
                <%= s.label :source, "Source", :class => "form-label" %>
                <%= s.text_field :source, :placeholder => "Safety Net", :class => "form-control" %>
                <%= s.label :amount, "Amount", :class => "form-label" %>
                <%= s.number_field :amount, :placeholder => "500", :class => "form-control" %>
            <% end %>
             <%= content_tag :div, '', :class => "text-center" do %>
          <%= f.submit "Submit", :class => "btn btn-success text-center" %>
        <% end %>
        <% end %>
  <% end %>

<% end %><br>






<% end %>
