<% if @errors %>
  <%= content_tag :div, '',  :id => "error_explanation" %>
    <%= content_tag :h2 do %>
      <%= pluralize(@errors.count, "error") %> prohibited you from creating this planner:
    <% end %>
    <%= content_tag :ul do %>
      <% @errors.each.uniq do |error| %>
        <%= content_tag :li do %>
          <%= error %>
        <% end %>
      <% end %>
    <% end %>
<% end %>

<%= content_tag :div, "", :class => "container" do %>
  <%= content_tag :div, "", :class => "position-relative" do %>
    <%= content_tag :p, "New Budget", :class => "text-center display-4" %>
    <%= render 'planners/form' %>
  <% end %>
<% end %>




