<% t= Time.now %>

<%= form_for([@user,@planner]) do |f| %>
      <%= f.hidden_field :user_id, :value => @user.id %>
      <%= f.label :month, "Month", :class => "form-label"%>
      <%= f.text_field :month, :class => "form-control", :placeholder => @planner.errors.full_messages_for(:month).first || t.strftime("%B") %>
      <%= f.label :goal, "Goal", :class => "form-label" %>
      <%= f.text_field :goal, :class => "form-control", :placeholder => @planner.errors.full_messages_for(:goal).first || "Save for August Vacation" %>
      <%= f.label :amount, "Amount", :class => "form-label" %>
      <%= f.number_field :amount, :class => "form-control", :placeholder => @planner.errors.full_messages_for(:amount).first || "2000" %>
      <%= content_tag :div, '', :class => "text-center" do %>
            <%= f.submit "Submit", :class => "btn btn-success text-center" %>
      <% end %>
<% end %>