<%= content_tag :nav, '', :class => "navbar navbar-light bg-secondary" do %>
    <%= link_to "Back to Dashboard", user_path(@planner.user_id), :class => "btn btn-outline-light" %>
<% end %>

<%= content_tag :section, "", :class => "py-5 text-center container" do %>
        <%= content_tag :h1, @planner.month, :class => "fw-light" %> 
        <%= content_tag :p, "Goal: #{@planner.goal}" %>
        <%= content_tag :p, "Target: $#{@planner.amount}" %>

    <%= content_tag :div,'',:class => "card-group" do %>
        <%= render 'display_cards' %>
    <% end %><br>

    <%= content_tag :h4, "Remaining bugdet: $#{@planner.total_incomes - (@planner.total_savings + @planner.total_expenses)}" %>

    <%= link_to "Delete Budget", @planner, :method => :delete, :class => "btn btn-outline-dark" %>

<% end %>

